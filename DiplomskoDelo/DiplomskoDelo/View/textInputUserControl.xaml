<UserControl x:Class="DiplomskoDelo.textInputUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DiplomskoDelo"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:storyViewModel}"
             d:DesignHeight="300" d:DesignWidth="500" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="mainEditorTextBox" Margin="5" Text="{Binding ActiveAttribute}" TextWrapping="Wrap" />
        <Button x:Name="saveTextButton" Command="{Binding Path=UpdateCommand}" Content="Save" Grid.Row="1" Margin="5" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Center" Click="saveTextButton_Click" />
        <Label x:Name="saveLabel" Content="Close window to discard changes" Grid.Row="1" Margin="5" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Center" />
    </Grid>
</UserControl>